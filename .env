# Alert Hub Backend Environment Configuration
# Copy this to .env and update values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alert_hub
DB_USER=adalton
DB_PASSWORD=

# Server Configuration
PORT=3001
NODE_ENV=development

# Optional: Redis for future caching
REDIS_HOST=localhost
REDIS_PORT=6379

# Optional: Logging configuration
LOG_LEVEL=info

# Optional: CORS configuration
CORS_ORIGIN=http://localhost:3000

# Optional: Alert ingestion settings
MAX_ALERT_BATCH_SIZE=100
TELEMETRY_RETENTION_DAYS=30
ALERT_RETENTION_DAYS=90

# Production settings (when NODE_ENV=production)
# DB_SSL=true
# DB_POOL_MAX=20
# DB_POOL_MIN=5
# DB_IDLE_TIMEOUT=30000
# DB_CONNECTION_TIMEOUT=2000
