{
  "name": "alert-hub-backend",
  "version": "1.0.0",
  "description": "Alert Hub backend with PostgreSQL storage",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "psql -h localhost -U postgres -d alert_hub -f schema.sql",
    "db:reset": "psql -h localhost -U postgres -c 'DROP DATABASE IF EXISTS alert_hub; CREATE DATABASE alert_hub;' && npm run db:migrate",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.0",
    "express": "^4.18.2",
    "pg": "^8.16.2",
    "pino": "^9.8.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.1",
    "@types/pg": "^8.15.4",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-node-dev": "^2.0.0"
  },
  "keywords": [
    "alerts",
    "observability",
    "service-topology",
    "opentelemetry",
    "sre"
  ],
  "author": "Your Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
