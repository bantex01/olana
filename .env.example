# Alert Hub Backend Environment Configuration
# Copy this to .env and update values as needed

# Database Configuration - Supabase Session Pooler
DB_HOST=your-supabase-pooler-host.pooler.supabase.com
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres.your-project-id
DB_PASSWORD=your-supabase-password

# Server Configuration
PORT=3001
NODE_ENV=development

# Optional: Redis for future caching
REDIS_HOST=localhost
REDIS_PORT=6379

# Optional: Logging configuration
LOG_LEVEL=info

# Optional: CORS configuration
CORS_ORIGIN=http://localhost:3000

# Optional: Alert ingestion settings
MAX_ALERT_BATCH_SIZE=100
TELEMETRY_RETENTION_DAYS=30
ALERT_RETENTION_DAYS=90

# Production settings (when NODE_ENV=production)
# DB_SSL=true
# DB_POOL_MAX=15
# DB_POOL_MIN=2
# DB_IDLE_TIMEOUT=30000
# DB_CONNECTION_TIMEOUT=5000

# Supabase-specific settings
DB_SSL=false
DB_POOL_MAX=15

SERVICE_TTL_HOURS=1           # Delete services stale for 1+ hours
CLEANUP_INTERVAL_HOURS=0.1    # Run cleanup every 6 minutes  
ENABLE_AUTO_CLEANUP=true      # Auto cleanup enabled
MAX_SERVICES_TO_DELETE_PER_RUN=10  # Max 10 services per run
CLEANUP_DRY_RUN=true          # Just show what would be deleted

# Alertmanager Integration Settings
ALERTMANAGER_DEFAULT_NAMESPACE=default
ALERTMANAGER_WEBHOOK_ENABLED=true

ALERTMANAGER_ALLOWED_TAG_LABELS=team,component,owner,environment,cluster,region,squad,product
ALERTMANAGER_TAG_PREFIX_PATTERNS=service_,app_,k8s_
ALERTMANAGER_MAX_TAGS_FROM_ALERTS=10
ALERTMANAGER_PRESERVE_LABEL_NAMES=true